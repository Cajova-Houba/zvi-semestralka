<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="rootPane" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="zvi.valesz.app.main.Controller">
      <!-- pane with configuration -->
      <right>
         <VBox prefWidth="300" spacing="30">
             <VBox alignment="TOP_LEFT">
                <Label text="Ovládání:" />
                <Button fx:id="loadImageBtn" onAction="#onLoadImageClick" text="Načti obrázek" />
             </VBox>
             <!-- threshold -->
             <VBox alignment="CENTER_LEFT" spacing="5">
                <Label text="Narůstání oblastí:" />
                <FlowPane>
                   <Label text="Threshold:" />
                   <TextField fx:id="thresholdValLabel" text="0" />
                </FlowPane>
                <Button onAction="#performSegmentation" text="Proveď segmentaci" />
             </VBox>
             <VBox spacing="5">
                 <Label text="Ruční prahování:" />
                 <FlowPane>
                    <ListView maxHeight="100" maxWidth="200" prefHeight="100" prefWidth="200" fx:id="thresholdView"/>
                    <Button disable="true" text="-" />
                 </FlowPane>
                 <FlowPane>
                     <Label text="Práh: " />
                     <TextField prefWidth="30" fx:id="newThresh"/>
                     <Label text="Hodnota: " />
                     <TextField prefWidth="30" fx:id="threshVal"/>
                     <Button text="+" onAction="#onAddThresholdClick"/>
                 </FlowPane>
                 <Button text="Proveď ruční prahování" onAction="#performManualThresholding"/>
             </VBox>
         </VBox>
      </right>

      <!-- pane displaying image -->
      <center>
         <VBox alignment="CENTER">
             <ScrollPane hmax="600.0" vmax="600.0">
                <ImageView fx:id="imageView" />
             </ScrollPane>
         </VBox>
      </center>

      <bottom>
          <FlowPane alignment="BOTTOM_CENTER">
            <Label fx:id="feedback" />
          </FlowPane>
      </bottom>

</BorderPane>
